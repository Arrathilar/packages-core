pkgbase=linux317
pkgname=('linux317' 'linux317-headers')
_kernelname=-MANJARO
_basekernel=3.17
_basever=317
_aufs=20140811
_bfq=v7r5
_rc=rc4
pkgver=${_basekernel}${_rc}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
