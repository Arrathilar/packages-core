pkgname=('linux43' 'linux43-headers')
_kernelname=-MANJARO
_basekernel=4.3
_basever=43
_aufs=20150629
_bfq=v7r9
_rc=rc1
pkgver=${_basekernel}${_rc}
pkgrel=2
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
