pkgname=('linux43' 'linux43-headers')
_kernelname=-MANJARO
_basekernel=4.3
_basever=43
_aufs=20150928
_bfq=v7r8
_rc=rc3
pkgver=${_basekernel}${_rc}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=(#"https://www.kernel.org/pub/linux/kernel/v4.x/linux-${_basekernel}.tar.xz"
