pkgname=('linux42' 'linux42-headers')
_kernelname=-MANJARO
_basekernel=4.2
_basever=42
_aufs=20150629
_bfq=v7r8
pkgver=${_basekernel}.0
pkgrel=2
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
