pkgbase=linux48
pkgname=('linux48' 'linux48-headers')
_kernelname=-MANJARO
_basekernel=4.8
_basever=48
_aufs=20161010
_bfq=v8r4
_sublevel=4
pkgver=${_basekernel}.${_sublevel}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc' 'elfutils')
options=('!strip')
source=("https://www.kernel.org/pub/linux/kernel/v4.x/linux-${_basekernel}.tar.xz"
        #"https://www.kernel.org/pub/linux/kernel/v4.x/testing/linux-${_basekernel}.tar.xz"
        #https://github.com/torvalds/linux/archive/v${_basekernel}.tar.gz
        "http://www.kernel.org/pub/linux/kernel/v4.x/patch-${pkgver}.xz"
        # the main kernel config files
        'config' 'config.x86_64' 'config.aufs'
        # standard config files for mkinitcpio ramdisk
        "${pkgbase}.preset"
        "aufs4.8-${_aufs}.patch.bz2"
        'aufs4-base.patch'
        'aufs4-kbuild.patch'
        'aufs4-loopback.patch'
        'aufs4-mmap.patch'
        'aufs4-standalone.patch'
        'tmpfs-idr.patch'
        'vfs-ino.patch'
        "0001-BFQ-${_bfq}-v${pkgver}.patch::https://github.com/linusw/linux-bfq/compare/c8d2bc9...5d646b8.patch"
        # ARCH Patches
        'change-default-console-loglevel.patch'
        # MANJARO Patches
        'revert-intel-asoc.patch'
        'i8042-asus-x455lab-dmi.patch'
)
