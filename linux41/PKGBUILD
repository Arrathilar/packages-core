pkgname=('linux41' 'linux41-headers')
_kernelname=-MANJARO
_basekernel=4.1
_basever=41
_aufs=20170220 # Last Version
_bfq=v7r8
pkgver=${_basekernel}.48
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
