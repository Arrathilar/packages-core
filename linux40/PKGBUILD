pkgbase=linux40
pkgname=('linux40' 'linux40-headers')
_kernelname=-MANJARO
_basekernel=4.0
_basever=40
_aufs=20150406
_bfq=v7r7
pkgver=${_basekernel}.0
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=("https://www.kernel.org/pub/linux/kernel/v4.x/linux-${_basekernel}.tar.xz"
