pkgbase=linux315
pkgname=('linux315' 'linux315-headers')
_kernelname=-MANJARO
_basekernel=3.15
_basever=315
_aufs=20140728
_bfq=v7r5
pkgver=${_basekernel}.8
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
