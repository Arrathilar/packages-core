pkgbase=linux319
pkgname=('linux319' 'linux319-headers')
_kernelname=-MANJARO
_basekernel=3.19
_basever=319
_aufs=20150126
_bfq=v7r7
pkgver=${_basekernel}.1
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=("https://www.kernel.org/pub/linux/kernel/v3.x/linux-${_basekernel}.tar.xz"
